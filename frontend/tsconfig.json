{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "strict": true,
        "jsx": "react-jsx",
        "types": ["vite/client", "node"],
        "skipLibCheck": true
    },
    "include": ["src"]
}
